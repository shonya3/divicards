{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": false,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"experimentalDecorators": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"../shared/poe.types.ts",
		"../shared/StashLoader.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
